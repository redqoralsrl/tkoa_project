                </nav>
            </div>
        </div>
        
        
        <div class="body_right">

            <!-- 로그인창 -->
            <div class="popup">
                <h2>Login</h2>
                <div class="con">
                    <form action="/login" method="POST">
                        <div class="textbox">
                            <i class="fas fa-user"></i>
                            <input type="text" name="id" id="id" placeholder="User" required>
                        </div>
                        <div class="textbox">
                            <i class="fas fa-lock"></i>
                            <input type="password" name="pw" id="pw" placeholder="Password" required>
                        </div>
                        <input type="submit" class="btn" value="Login">
                    </form>
                </div><!--con-->
                <!-- <a href="" class="close"><img src="/images/x.jpg"></a> -->
            </div>
            <div class="dim"></div>

        </div><!--body_right-->

